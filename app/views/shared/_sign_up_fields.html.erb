<div class='field'>
  <%= f.label :email %><br/>
  <%= f.text_field :email, :type => 'email' %>
</div>
<% if @user.password_required? %>
<div class='field'>
  <%= f.label :password %><br/>
  <%= f.password_field :password %>
</div>
<div class='field'>
  <%= f.label :password_confirmation %><br/>
  <%= f.password_field :password_confirmation %>
</div>
<% end %>