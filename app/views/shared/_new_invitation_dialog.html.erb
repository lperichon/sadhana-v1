<div id='new_invitation_dialog' style='display:none' title='<%= t('shared.new_invitation_dialog.title') %>'>
  <%= render :partial => 'shared/invitation_fields' %>
  <p>
    <%= t('shared.new_invitation_dialog.share_from') %>
    <a name="fb_share" type="button" share_url="http://sadhana.com.ar" href="http://www.facebook.com/sharer.php"><%= t('actions.share') %></a><script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript"></script>
    <a href="http://twitter.com/share" class="twitter-share-button" data-url="http://sadhana.com.ar" data-text="<%= t('shared.new_invitation_dialog.share_on_facebook') %>" data-count="none" data-via="sadhana_app" data-related="lperichon">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
  </p>
</div>

<%= javascript_tag do %>
  $('#new_invitation_dialog').dialog({autoOpen: false, modal: true, width: 400, buttons: {
    '<%= t('actions.invite') %>': function() {
        $('#new_invitation_dialog form').submit();
      },
    '<%= t('actions.cancel') %>': function() {
        $(this).dialog('close');
      }
    }
  });
<% end %>