<div id='new_invitation_dialog' style='display:none' title='<%= t('shared.new_invitation_dialog.title') %>'>
  <%= render :partial => 'devise/invitations/dialog_form' %>
</div>

<%= javascript_tag do %>
  $('#new_invitation_dialog').dialog({autoOpen: false, modal: true, buttons: {
    '<%= t('actions.invite') %>': function() {
        $('#new_invitation_dialog form').submit();
      },
    '<%= t('actions.cancel') %>': function() {
        $(this).dialog('close');
      }
    }
  });
<% end %>