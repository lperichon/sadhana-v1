<div id='forgot_password_dialog' style='display:none' title='<%= t('shared.forgot_password_dialog.title') %>'>
  <%= form_for(resource_name, resource, :url => password_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <% unless resource.errors[:email].blank? %>
        <span id='errorExplanation'>- <%= resource.errors[:email].first %></span>
      <% end %>
      <br/>
      <%= f.text_field :email %>
    </div>
  <% end %>

  <%= render :partial => "shared/registration_links" %>
</div>

<%= javascript_tag do %>
  $('#forgot_password_dialog').dialog({autoOpen: false, modal: true, buttons: {
  '<%= t('actions.resend') %>': function() {
      $('#forgot_password_dialog form').submit();
    },
  '<%= t('actions.cancel') %>': function() {
      $(this).dialog('close');
    }
  }});
<% end %>