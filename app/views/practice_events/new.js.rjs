page << "$('#new_event_dialog').html('#{escape_javascript render :partial => 'dialog_form'}');"
page << %(
  $('#new_event_dialog').dialog({
    autoOpen: true,
    height: 300,
    width: 350,
    modal: true,
    buttons: {
      Save: function() {
        $.ajax({
            type:'post',
            dataType: 'script',
            data: $('#new_event_dialog form').serialize(),
            url: $('#new_event_dialog form').attr('action'),
            success: function() {
              $('#new_event_dialog').dialog('close');
            }
        });
      },
      Cancel: function() {
        $('#new_event_dialog').dialog('close');
      }
    }
  });
)
